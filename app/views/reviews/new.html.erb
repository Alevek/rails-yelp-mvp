<div class="container">
  <%= simple_form_for [ @restaurant, @review ] do |f| %>
    <%= f.input :content, label: "Leave us a comment about your last experience at #{@restaurant.name}"%>
    <%= f.input :rating, label: "Evaluate beetween 0 and 5" %>
    <%= f.submit "Submit review", class: "btn btn-primary" %>
  <% end %>
  <div class="mt-3">
    <%=link_to 'BACK', restaurant_path(@restaurant) %>
  </div>
</div>
